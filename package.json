{
  "name": "@pay2nature/widget-sdk",
  "version": "1.0.3",
  "type": "module",
  "description": "Pay2Nature Widget SDK - Integrate Pay2Nature payment widgets into any web application",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js",
      "browser": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/Pay2NatureWidget.esm.js",
      "require": "./dist/react/Pay2NatureWidget.cjs.js",
      "types": "./dist/react/Pay2NatureWidget.d.ts"
    },
    "./vue": "./src/vue/Pay2NatureWidget.vue",
    "./jquery": {
      "import": "./dist/jquery/pay2nature.jquery.esm.js",
      "require": "./dist/jquery/pay2nature.jquery.cjs.js"
    },
    "./jquery/index": {
      "import": "./dist/jquery/pay2nature.jquery.esm.js",
      "require": "./dist/jquery/pay2nature.jquery.cjs.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "pay2nature",
    "payment",
    "widget",
    "donation",
    "nature",
    "conservation",
    "stripe",
    "mobile-money"
  ],
  "author": "Pay2Nature",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IndelibleIncLtd/pay2nature-web-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/IndelibleIncLtd/pay2nature-web-sdk/issues"
  },
  "homepage": "https://github.com/IndelibleIncLtd/pay2nature-web-sdk#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^20.16.11",
    "rollup": "^4.18.0",
    "rollup-plugin-dts": "^6.1.0",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "vue": "^2.6.0 || ^3.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  }
}

